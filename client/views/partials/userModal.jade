.modal-header
     button(type="button" class="close" ng-click="cancel()" aria-hidden="true") &times;     
     h4 User Account Details
.modal-body
  div
         form.form-horizontal.modal-form(name='userForm', novalidate='')
            fieldset
               .form-group
                  label.col-md-4.control-label(for='checkboxes') Role
                  .col-md-4
                      .checkbox.checkbox-success
                         input#checkboxes-0(type='checkbox',ng-model='item.admin', name='checkboxes')
                         label(for='checkboxes-0')                            
                            | Administrator
                      .checkbox.checkbox-success
                         input#checkboxes-4(type='checkbox',ng-model='item.chairman', name='checkboxes')
                         label(for='checkboxes-4')                            
                            | Chairman
                      .checkbox.checkbox-success
                         input#checkboxes-3(type='checkbox',ng-model='item.secretary', name='checkboxes')
                         label(for='checkboxes-3')
                            | Secretary
                      .checkbox.checkbox-success
                         input#checkboxes-5(type='checkbox',ng-model='item.treasurer', name='checkboxes')
                         label(for='checkboxes-5')                            
                            | Treasurer
                      .checkbox.checkbox-success
                         input#checkboxes-2(type='checkbox',ng-model='item.member', name='checkboxes')
                         label(for='checkboxes-2')                            
                            | Commitee Member
                      .checkbox.checkbox-success
                         input#checkboxes-1(type='checkbox',ng-model='item.manager', name='checkboxes')
                         label(for='checkboxes-1')                            
                            | Manager 
                      .checkbox.checkbox-success
                          input#checkboxes-6(type='checkbox',ng-model='item.owner', ng-click='ownerCheck()', name='checkboxes')
                          label(for='checkboxes-6')                            
                            | Apartment Owner
               .form-group(ng-show='item.owner')
                  label.col-md-4.control-label(for='apartment') Apartment 
                  .col-md-3
                     select.form-control.input-small(ng-model="item.apartmentnumber",placeholder='Flat Number', ng-options="aptno for aptno in apartmentnumbers")
               .form-group
                  label.col-md-4.control-label(for='useremail') User Email
                  .col-md-6
                     input#userEmail.form-control.input-xlarge(name='useremail',type="email", ng-model='item.username', placeholder='User Email', disabled='true')


.modal-footer
    div
      button.btn.btn-primary(ng-disabled='!(userForm.$valid && checkApt())', ng-click='ok()') Save
      button.btn.btn-warning(ng-click='cancel()') Cancel

